/// <summary>
/// Flat shading: only albedo is used, there is no lighting.
/// </summary>
class AlbedoFlatShading : ShadingBase, AlbedoDiffuseBase, AlbedoSpecularBase
{
    override stage float4 Shading() {
        return base.Shading() + this.DiffuseAlbedo();
    }
};
