/// <summary>
/// Computes the diffuse albedo.
/// </summary>
class AlbedoDiffuseBase
{
    // The color of the diffuse
    compose ComputeColor albedoDiffuse;

    float4 DiffuseAlbedo() { return albedoDiffuse.Compute(); }
};
