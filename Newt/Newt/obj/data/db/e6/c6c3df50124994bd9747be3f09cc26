/// <summary>
/// Outputs the normals in view space.
/// </summary>
class NormalColor : ComputeColor
{
    compose NormalVSBase normalVS = stage;

    override float4 Compute()
    {
        float3 normal = normalVS.NormalVS();
        return float4(normal, 1.0f);
    }
};