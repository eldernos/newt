/// <summary>
/// Implements direction to light for directional lights.
/// </summary>
class DirectionalShading : LightParameters, ShadingGroup
{
    override float3 GetDirectionToLight(int lightIndex)
    {
        return -GetLightDirection(lightIndex);
    }
};