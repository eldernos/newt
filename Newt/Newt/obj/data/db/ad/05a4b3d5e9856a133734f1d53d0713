/// <summary>
/// put the post effect quad at the back of the frustum.
/// </summary>
class PostEffectBack : ImageEffectShader
{
    override stage void TransformPosition()
    {
        base.TransformPosition();
        streams.ShadingPosition.z = 1.0f;
    }
};
