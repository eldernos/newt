/// <summary>
/// Retrieves the reflectance from a ComputeColor.
/// </summary>
class MaterialReflectance : MaterialReflectanceBase
{
    compose ComputeColor ReflectanceMap;

    override stage float GetReflectance()
    {
        return ReflectanceMap.Compute().x;
    }
};