/// <summary>
/// Computes diffuse albedo.
/// </summary>
class ShadingDiffuse : ShadingGroup
{
    compose AlbedoDiffuseBase albedoDiffuseBase = stage;
    
    override float3 ComputeDiffuseAlbedo()
    {
        return albedoDiffuseBase.DiffuseAlbedo().xyz;
    }
};