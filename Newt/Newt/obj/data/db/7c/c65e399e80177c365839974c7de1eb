/// <summary>
/// Discards transparent pixels below a specified threshold.
/// </summary>
class DiscardTransparentThreshold<float alphaThreshold> : ShaderBase
{
    override void PSMain()
    {
        base.PSMain();

        if(streams.ColorTarget.a < alphaThreshold)
            discard;
    }
};